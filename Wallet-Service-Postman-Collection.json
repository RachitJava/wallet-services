        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"walletId\": \"{{walletId}}\",\n  \"operationType\": \"WITHDRAW\",\n  \"amount\": 999999.00\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/wallet",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "wallet"]
        },
        "description": "Test insufficient funds error (400 Bad Request)"
      },
      "response": []
    },
    {
      "name": "Error: Wallet Not Found",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/wallets/00000000-0000-0000-0000-000000000001",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "wallets", "00000000-0000-0000-0000-000000000001"]
        },
        "description": "Test wallet not found error (404 Not Found)"
      },
